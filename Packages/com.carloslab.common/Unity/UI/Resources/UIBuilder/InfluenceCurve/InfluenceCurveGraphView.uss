#InputSlider > .unity-base-slider__input {
    flex-direction: column;
    flex-grow: 1;
    align-items: stretch;
}

#InputSlider .unity-base-slider__text-field {
    flex-grow: 1;
    width: 40px;
    align-self: center;
    left: -2px;
}

#InputSlider .unity-slider__label {
    min-width: initial;
}

.unity-label {
    margin: 0;
    padding: 0 2px 0 1px;
    font-size: 12px;
}
